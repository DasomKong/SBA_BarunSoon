<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    android:orientation="vertical"
    android:background="#ffffff"
    tools:context=".Main.Home">

    <cn.trinea.android.view.autoscrollviewpager.AutoScrollViewPager
        android:id="@+id/autoViewPager"
        android:layout_width="match_parent"
        android:layout_height="200dp">

    </cn.trinea.android.view.autoscrollviewpager.AutoScrollViewPager>

    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_alignParentStart="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="250dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/aimageview1"
                android:layout_width="125dp"
                android:layout_height="100dp"
                android:gravity="center"
                app:srcCompat="@drawable/dunk1" />

            <ImageView
                android:id="@+id/aimageview2"
                android:layout_width="200dp"
                android:layout_height="100dp"
                android:gravity="center"
                app:srcCompat="@drawable/corner1" />

            <ImageView
                android:id="@+id/aimageview3"
                android:layout_width="200dp"
                android:layout_height="100dp"
                android:gravity="center"
                app:srcCompat="@drawable/touchdown1" />
            <ImageView
                android:id="@+id/aimageview4"
                android:layout_width="200dp"
                android:layout_height="100dp"
                android:gravity="center"
                app:srcCompat="@drawable/rele1" />

        </LinearLayout>

    </HorizontalScrollView>

    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="400dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/bimageview1"
                android:layout_width="200dp"
                android:layout_height="100dp"
                android:gravity="center"
                app:srcCompat="@drawable/swet1" />

            <ImageView
                android:id="@+id/bimageview2"
                android:layout_width="200dp"
                android:layout_height="100dp"
                android:gravity="center"
                app:srcCompat="@drawable/germ1" />

            <ImageView
                android:id="@+id/bimageview3"
                android:layout_width="200dp"
                android:layout_height="100dp"
                android:gravity="center"
                app:srcCompat="@drawable/target1" />

            <ImageView
                android:id="@+id/bimageview4"
                android:layout_width="200dp"
                android:layout_height="100dp"
                android:gravity="center"
                app:srcCompat="@drawable/scala1" />

        </LinearLayout>

    </HorizontalScrollView>

    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="550dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/cimageview1"
                android:layout_width="200dp"
                android:layout_height="100dp"
                android:gravity="center"
                app:srcCompat="@drawable/vika1" />

            <ImageView
                android:id="@+id/cimageview2"
                android:layout_width="200dp"
                android:layout_height="100dp"
                android:gravity="center"
                app:srcCompat="@drawable/mineword1" />

            <ImageView
                android:id="@+id/cimageview3"
                android:layout_width="200dp"
                android:layout_height="100dp"
                android:gravity="center"
                app:srcCompat="@drawable/newton1" />

            <ImageView
                android:id="@+id/cimageview4"
                android:layout_width="200dp"
                android:layout_height="100dp"
                android:gravity="center"
                app:srcCompat="@drawable/constello1" />

        </LinearLayout>

    </HorizontalScrollView>

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="22dp"
        android:layout_marginTop="225dp"
        android:text="혼자도 가능해" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="22dp"
        android:layout_marginTop="375dp"
        android:text="친구와 팀대결" />

    <TextView
        android:id="@+id/score"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="22dp"
        android:layout_marginTop="525dp"
        android:text="놀면서 공부하기" />

    <TextView
        android:id="@+id/Moregames"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="225dp"
        android:layout_marginEnd="25dp"
        android:text="더보기" />

</RelativeLayout>